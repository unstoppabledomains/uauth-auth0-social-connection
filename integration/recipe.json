{
  "authorizationURL": "https://auth.unstoppabledomains.com/oauth2/auth",
  "tokenURL": "https://auth.unstoppabledomains.com/oauth2/token",
  "permissions": [
    {
      "scope": "email",
      "label": "Email",
      "required": true,
      "default": true
    },
    {
      "scope": "wallet",
      "label": "Wallet",
      "required": true,
      "default": true
    },
    {
      "scope": "profile",
      "label": "Profile (required)",
      "required": false,
      "default": false
    },
    {
      "scope": "profile:optional",
      "label": "Profile (optional)",
      "required": false,
      "default": true
    },
    {
      "scope": "social",
      "label": "Social connections (required)",
      "required": false,
      "default": false
    },
    {
      "scope": "social:optional",
      "label": "Social connections (optional)",
      "required": false,
      "default": true
    },
    {
      "scope": "humanity_check",
      "label": "Humanity Check (required)",
      "required": false,
      "default": false
    },
    {
      "scope": "humanity_check:optional",
      "label": "Humanity Check (optional)",
      "required": false,
      "default": true
    }
  ],
  "configuration": [
    {
      "name": "client_id",
      "label": "Client ID",
      "description": "Login with Unstoppable client ID",
      "required": true
    },
    {
      "name": "client_secret",
      "label": "Client Secret",
      "description": "Login with Unstoppable client secret",
      "required": true
    }
  ]
}
